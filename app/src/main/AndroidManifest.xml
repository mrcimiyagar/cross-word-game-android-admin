<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kasper.android.cross_word_admin">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".core.MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="false"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.AdminPanelActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.GameLevelsListActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.GameLevelsAddActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.TableActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.GameLevelsWordInfoActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.GameLevelsWordsAddActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.YesNoActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Dialog" />
        <activity
            android:name=".activities.TournamentActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.PresentActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Dialog" />
        <activity
            android:name=".activities.StartTournamentActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.MessagesActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.MessageAddActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Dialog" />
        <activity
            android:name=".activities.WordsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activities.WordAddActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Dialog" />
        <activity
            android:name=".activities.WordDetailsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Dialog" />
        <activity android:name=".activities.GuideEditActivity" />
        <activity android:name=".activities.CoinsActivity"></activity>
    </application>

</manifest>